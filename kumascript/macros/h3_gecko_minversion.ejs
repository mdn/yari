<%
/*
    $0 = [String] Gecko version
    $1 = [String] headline content
    $2 = [String / Optional] name/id attribute
*/

// Throw a MacroDeprecatedError flaw
// Condition for removal: no more use in translated-content (currently 60 occurrences)
// 0 occurrences left in en-US
mdn.deprecated();

var idAttr = $2 ? ' name="' + $2 + '" id="' + $2 + '"' : "";

var str = mdn.localString({
    "en-US" : "Requires Gecko " + $1,
    "ja"    : "Gecko " + $1 + " が必要",
    "ru"    : "Требуется Gecko " + $1
});
 
 
%><div class="headingWithIndicator">
    <h3<%- idAttr %>><%= $0 %></h3>
    <span class="indicatorInHeadline minVer geckoMinVerMethod"><%- str %><%- await template("geckoRelease", [$1]) %></span>
</div>
