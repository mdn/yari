<%
/* Parameters:
    $0 - version of Gecko
    $1 - optional text that will display under the version line
*/

/* get the page language */
var lang = env.locale;

var str = "Gecko " + $0 + " note";

switch(lang) {
  case 'de':
    str = "Hinweis zu Gecko " + $0;
    break;
  case 'ru':
    str = "Замечание по Gecko " + $0;
    break;
}
%>
<div class="notecard note">
  <h4><%- str %></h4>
  <p><%- $1 %></p>
</div>
