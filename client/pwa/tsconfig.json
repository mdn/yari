{
  "compilerOptions": {
    "module": "ES2015",
    "target": "esnext",
    "lib": ["es2015", "webworker"],
    "jsx": "react",
    "noImplicitAny": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "outDir": "../public",
    "moduleResolution": "node"
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.tsx", "src/**/*.tsx"]
}
